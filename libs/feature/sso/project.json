{
  "name": "sso",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/feature/sso/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/feature/sso",
        "tsConfig": "libs/feature/sso/tsconfig.lib.json",
        "packageJson": "libs/feature/sso/package.json",
        "main": "libs/feature/sso/src/index.ts",
        "assets": [
          "libs/feature/sso/*.md",
          {
            "glob": "**/*.json",
            "input": "./libs/feature/sso/src/i18n/getText/",
            "output": "i18n"
          },
          {
            "glob": "**/*.sql",
            "input": "./libs/feature/sso/src/migrations/",
            "output": "migrations"
          }
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/feature/sso/jest.config.ts"
      }
    },
    "skip-semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "buildTarget": "${PROJECT_NAME}:build",
        "outputPath": "dist/libs/feature/sso"
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "./node_modules/.bin/prisma generate --schema=./libs/feature/sso/src/prisma/schema.prisma"
        ],
        "parallel": false,
        "envFile": "./.env",
        "color": true
      }
    },
    "prisma-generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "./node_modules/.bin/prisma generate --schema=./libs/feature/sso/src/prisma/schema.prisma"
        ],
        "parallel": false,
        "envFile": "./.env",
        "color": true
      }
    },
    "prisma-pull": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "./node_modules/.bin/prisma db pull --schema=./libs/feature/sso/src/prisma/schema.prisma"
        ],
        "parallel": false,
        "envFile": "./.env",
        "color": true
      }
    },
    "db-create": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "./node_modules/.bin/pg-create-db --force-change-username=true --force-change-password=true --root-database-url=${SINGLE_SIGN_ON_ROOT_DATABASE_URL} --app-database-url=${SINGLE_SIGN_ON_SSO_DATABASE_URL}"
        ],
        "parallel": false,
        "envFile": "./.env",
        "color": true
      }
    },
    "pg-flyway-create-migration": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "export PG_FLYWAY_DATABASE_URL=${SINGLE_SIGN_ON_SSO_DATABASE_URL} && export PG_FLYWAY_HISTORY_TABLE=__migrations_sso && export PG_FLYWAY_LOCATIONS=./libs/feature/sso/src/migrations && ./node_modules/.bin/pg-flyway create --name=${npm_config_args:-NewMigration}"
        ],
        "parallel": false,
        "envFile": "./.env",
        "color": true
      }
    },
    "pg-flyway-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "export PG_FLYWAY_DATABASE_URL=${SINGLE_SIGN_ON_SSO_DATABASE_URL} && export PG_FLYWAY_HISTORY_TABLE=__migrations_sso && export PG_FLYWAY_LOCATIONS=./libs/feature/sso/src/migrations && ./node_modules/.bin/pg-flyway migrate"
        ],
        "parallel": false,
        "envFile": "./.env",
        "color": true
      }
    },
    "pg-flyway-info": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "export PG_FLYWAY_DATABASE_URL=${SINGLE_SIGN_ON_SSO_DATABASE_URL} && export PG_FLYWAY_HISTORY_TABLE=__migrations_sso && export PG_FLYWAY_LOCATIONS=./libs/feature/sso/src/migrations && ./node_modules/.bin/pg-flyway info"
        ],
        "parallel": false,
        "envFile": "./.env",
        "color": true
      }
    },
    "pg-flyway-baseline": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "export PG_FLYWAY_DATABASE_URL=${SINGLE_SIGN_ON_SSO_DATABASE_URL} && export PG_FLYWAY_HISTORY_TABLE=__migrations_sso && export PG_FLYWAY_LOCATIONS=./libs/feature/sso/src/migrations && ./node_modules/.bin/pg-flyway baseline"
        ],
        "parallel": false,
        "envFile": "./.env",
        "color": true
      }
    },
    "pg-flyway-validate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "export PG_FLYWAY_DATABASE_URL=${SINGLE_SIGN_ON_SSO_DATABASE_URL} && export PG_FLYWAY_HISTORY_TABLE=__migrations_sso && export PG_FLYWAY_LOCATIONS=./libs/feature/sso/src/migrations && ./node_modules/.bin/pg-flyway validate"
        ],
        "parallel": false,
        "envFile": "./.env",
        "color": true
      }
    },
    "pg-flyway-repair": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "export PG_FLYWAY_DATABASE_URL=${SINGLE_SIGN_ON_SSO_DATABASE_URL} && export PG_FLYWAY_HISTORY_TABLE=__migrations_sso && export PG_FLYWAY_LOCATIONS=./libs/feature/sso/src/migrations && ./node_modules/.bin/pg-flyway repair"
        ],
        "parallel": false,
        "envFile": "./.env",
        "color": true
      }
    }
  }
}